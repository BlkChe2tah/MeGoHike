<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/edge_inset_large"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/edge_inset_large"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:layout_width="wrap_content"
                android:alpha="0.5"
                android:layout_marginBottom="@dimen/edge_inset_small"
                android:text="@string/equipment"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/equipmentName"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:layout_width="match_parent"
                android:alpha="0.5"
                android:textAlignment="textEnd"
                android:layout_marginBottom="@dimen/edge_inset_small"
                android:text="@string/count"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/equipmentCount"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:alpha="0.6"
        android:background="?attr/colorOutline"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equipmentEditBtn"
        android:text="@string/edit"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.6"
        android:background="?attr/colorOutline"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equipmentDeleteBtn"
        android:text="@string/delete"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="?attr/colorError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>